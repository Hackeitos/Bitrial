<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CardContainer">

    <!--    <ImageView-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="match_parent"-->
    <!--            android:id="@+id/imageLogoBg"-->
    <!--            android:src="@drawable/bitrial_logo" />-->

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraintLayout">
        <!--            android:translationZ="10dp"-->

        <include
                layout="@layout/question_layout"
                android:id="@+id/geografia"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/entretenimiento"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <include
                layout="@layout/question_layout"
                android:id="@+id/entretenimiento"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@+id/geografia"
                app:layout_constraintBottom_toTopOf="@+id/historia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <include
                layout="@layout/question_layout"
                android:id="@+id/historia"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@+id/entretenimiento"
                app:layout_constraintBottom_toTopOf="@+id/literatura"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <include
                layout="@layout/question_layout"
                android:id="@+id/literatura"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@+id/historia"
                app:layout_constraintBottom_toTopOf="@+id/ciencias"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <include
                layout="@layout/question_layout"
                android:id="@+id/ciencias"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@+id/literatura"
                app:layout_constraintBottom_toTopOf="@+id/deportes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <include
                layout="@layout/question_layout"
                android:id="@+id/deportes"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ciencias"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
                android:src="@drawable/bitrial_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageLogoBg"
                app:tint="#FF0000" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>